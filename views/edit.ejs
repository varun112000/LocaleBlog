<%- include("partials/header") %>
<%- include("partials/navbar") %>
<div style="width:30%;margin:0 auto">
    <form action="/locations/<%=location._id%>?_method=PUT" method="POST">
        <h2 style="color: #e0e0e0;">Edit The Location </h2>
        <div class="form-group">
            <input type="text" class="form-control" name="name" value="<%=location.name%>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="image" value="<%=location.image%>">
        </div>
        <div class="form-group">
            <input type="textarea" class="form-control" name="desc" value="<%=location.desc%>">
        </div>
        <button class="btn btn-default">Submit</button>
    </form>
</div>
<%- include("partials/footer") %>
